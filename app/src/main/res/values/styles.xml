<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="login_header">
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="phone_number">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="bigger_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="big_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="header">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="header_center">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="header_bold">
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="flowers_list_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="red_text">
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@drawable/rounded_corner</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="small_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="small_text_gray">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="comments_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="comments_text_bold">
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="small_text_bold">
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="small_text_caps">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tiny_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="login_button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/tinos</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="current_order_button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/tinos</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="black_button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/tinos</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="clear_button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_peach</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/tinos</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:buttonTint">@color/black</item>
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AccountTextView">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">379sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/my_background_color</item>
    </style>

    <style name="RecyclerViewDefault">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/black</item>
    </style>
    <style name="TabLayoutCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicatorColor">#0000</item>
        <item name="tabIndicatorHeight">48dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/gray</item>
    </style>
</resources>